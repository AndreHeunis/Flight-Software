 * the mode
 ******************************************************************************/

static void FSW_FS_modeChange( uint8_t newMode )
{
	FSW_FS_mode = newMode;

	// Run required procedures to complete the mode change
	switch( newMode )
	{
	case FSW_MODE_OFF:

		break;

	case FSW_MODE_ON:

		break;

	case FSW_MODE_SAFE:

		break;

	case FSW_MODE_ERP:

		break;
	}
}

